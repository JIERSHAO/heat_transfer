FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0.1;
        smoother        GaussSeidel;
    }
   T
   {
       solver          smoothSolver;
       smoother        GaussSeidel;
       tolerance       1e-07;
       relTol          0.01;
   }
    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.01;
    }

    "(k|epsilon|omega|f|v2)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0.1;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors    1;
    consistent          yes;
    residualControl
    {
        p       1e-3;
        U       1e-3;
        T       1e-6;
    }
}
relaxationFactors
{
    equations
    {
        T 0.9;
        U 0.7;
        p 0.3;
    }
}

