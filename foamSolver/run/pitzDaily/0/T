FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];
internalField   uniform 300;

boundaryField
{
   inlet
   {
       type            fixedValue;
       value           uniform 300;
   }

   outlet
   {
       type            zeroGradient;
   }

   upperWall
   {
       type            fixedValue;
       value           uniform 350;
   }

   lowerWall
   {
       type            fixedValue;
       value           uniform 320;
   }

   frontAndBack
   {
       type            empty;
   }
}